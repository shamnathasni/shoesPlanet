 <script src="/public/adminAssets/assets/js/custom-chart.js"></script>
 <script>
   let cancel = parseInt("<%=cancelledOrder%>");
   let placeOrder = parseInt("<%=placedOrder%>");
   let deliveredOrder = parseInt("<%=deliveredOrder%>");
   var options = {
     series: [cancel, placeOrder, deliveredOrder],
     chart: {
       width: 280,
       type: "pie",
     },
     labels: ["Cancelled", "Placed", "Delivered"],
     responsive: [
       {
         breakpoint: 480,
         options: {
           chart: {
             width: 200,
           },
           legend: {
             position: "bottom",
           },
         },
       },
     ],
   };
 
   var chart = new ApexCharts(document.querySelector("#chart2"), options);
   chart.render();
 </script>
 