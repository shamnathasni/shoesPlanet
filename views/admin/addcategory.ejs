<%- include("../layouts/adminLayout/header.ejs") %>
<%- include("../layouts/adminLayout/navbar.ejs") %>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Categories</h2>
            <p>Add category</p>
        </div>
        <div>
            <input type="text" placeholder="Search Categories" class="form-control bg-white" />
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form action="/admin/addcategory" method="post" id="category-forum">
                <div class="mb-3">
                    <label for="category_name" class="form-label">Name</label>
                    <input type="text" name="name" placeholder="Type here" class="form-control" id="category_name" />
                    <div id="categoryError" class="text-danger"></div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-primary" type="submit">Create category</button>
                    <a class="btn btn-outline-danger" href="/admin/category">Cancel</a>
                </div>
            </form>
        </div>
    </div>    
</section>

<%- include("../layouts/adminLayout/footer.ejs") %>
